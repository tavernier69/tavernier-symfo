{% extends 'admin/base.html.twig' %}

{% block title %}Liste des régions
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5"></h1>
		<div class="mb-3">
			<a href="{{ path('admin_region_add') }}" class="btn btn-success">
				Ajouter une région
			</a>
		</div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Région</th>
					<th>Code postal</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for region in regions %}
					<tr>
						<td>{{ region.name }}</td>
						<td>{{ region.zip }}</td>
						<td>

							<a href="{{ path('admin_region_delete', {'id': region.id} ) }}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
