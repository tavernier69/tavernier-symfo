{% set url = path('ads_show', {slug: ad.slug}) %}
<div class="col-md-4 mb-3">
    <div class="card bg-light mb-3">
        <div class="card-header text-center" style="min-height: 100px;">
            <div class="row">
                <div class="col-12">{{ ad.title }}</div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="col">
                        {% if ad.comments |length > 0 %}
                            {% include "partials/rating.html.twig" with {'rating': ad.avgRatings} %}
                        {% else %}
                            <small>Pas encore not√©</small>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <img style="height: 200px; width: 100%; display: block;" src="/images/articles/cover_image/{{ ad.coverImage }}" alt="Image de l'article">
        <div class="card-body" style="min-height: 230px;">
            <div class="card-title">
                <h4>
                    <a href="{{ url }}">{{ ad.title }}</a>
                </h4>
            </div>
            <p class="card-text">{{ ad.introduction }}</p>
            <a href="{{ url }}" class="btn btn-secondary">Lire l'article</a>
            {% if app.user and app.user == ad.author %}
                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-primary">Modifier l'annonce</a>
            {% endif %}
        </div>
    </div>
</div>