{% extends 'base.html.twig' %}

{% block title %}Modification d'un article{% endblock %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

    <div class="container">
        <input type="hidden" class="chield" name="" value="{{ ad.coverImage }}">
        <h1>Modification de l'article {{ ad.title }}</h1>
        
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Modifier l'annonce</button>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}

    <script src="/js/ad.js" ></script>

    <script>
		$(document).ready(function () {
            const chield_pict = $(".chield").val();
            $('.custom-file-label').text(chield_pict);
            $(document).on('change', '.custom-file-input', function () {
                let fileName = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
                $(this).parent('.custom-file').find('.custom-file-label').text(fileName);
            });
        });
    </script>

{% endblock %}